#!/usr/bin/env bash

echo "-----> Installing Firefox"
# Go to app folder
cd $1

# Get firefox tar
curl https://raw.githubusercontent.com/kenshin23/firefox-portable-binary/master/firefox.tar.xz -s -O

# Create bin folder in vendor
mkdir -p vendor/firefox

# Extract all files
echo "       Extracting files to 'vendor/firefox'..."
tar --preserve-permissions --preserve-order -xvf firefox.tar.xz -C vendor/firefox
